<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Relativlayou"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".adopterSideActivities.dogWatchActivityAdopter">


    <TextView
        android:id="@+id/dogWatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:background="#FFFFFF"
        android:text="@string/dogName"
        android:textColor="#000"
        android:textDirection="rtl"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/dog_breed_watchDog"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="31dp"
        android:textDirection="rtl"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="@string/dogBreed" />

    <TextView
        android:id="@+id/advertiserdets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:background="#FFFFFF"
        android:text="@string/advertiserDETS"
        android:textColor="#000"
        android:textDirection="rtl"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/TableRow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/advertiserStreet"
                android:layout_width="213dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:background="#FFFF"
                android:text="@string/advertiserEmail"
                android:textColor="#0C0C0C"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/advertiserCity"
                android:layout_width="197dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:background="#FFFF"
                android:text="@string/advertiserPhone"
                android:textColor="#0C0C0C"
                android:textSize="18sp" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/totalPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="@string/dog_age"
        android:textColor="#000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/adopt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:onClick="adoption"
        android:text="@string/sendAdoptionRequest"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/dogPicturesRecycler" />
    <Button
        android:id="@+id/addtoFavorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF"
        android:onClick="addToFavorits"
        android:text="@string/addTofavorites"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progress_image_advertiser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dogPicturesRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp" >

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>