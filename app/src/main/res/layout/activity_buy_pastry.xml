<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bacground"
    android:orientation="vertical"
    tools:context=".customerSideActivities.BuyPastryActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <Button
        android:id="@+id/inputDate"
        android:layout_width="157dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="#FCF9F9"
        android:text="תאריך"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderDetails" />

    <EditText
        android:id="@+id/commentInput"
        android:layout_width="231dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="240dp"
        android:background="#FCF9F9"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/orderDetails"
        android:layout_width="223dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/orderDetails"
        android:textColor="#090808"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="16dp"
        android:text="@string/Pay"
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/deliveryTypeGroup"
        android:layout_width="186dp"
        android:layout_height="35dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="172dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/selfDelivery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FCF9F9"
            android:text="@string/selfDelivery" />

        <RadioButton
            android:id="@+id/delivery"
            android:layout_width="87dp"
            android:layout_height="match_parent"
            android:background="#FCF9F9"
            android:text="@string/delivery"
            app:layout_constraintTop_toTopOf="@id/deliveryTypeGroup" />

    </RadioGroup>

    <TextView
        android:id="@+id/comment"
        android:layout_width="90dp"
        android:layout_height="29dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="24dp"
        android:text="@string/comment"
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recieveOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="12dp"
        android:text="@string/recieveOrder"
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="52dp"
        android:text="@string/buy"
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        android:background="#FCF9F9"
        android:onClick="CreateNewOrderC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/paymentMethodGroup"
        android:layout_width="186dp"
        android:layout_height="35dp"
        android:layout_marginStart="52dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputDate">

        <RadioButton
            android:id="@+id/creditCard"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#FCF9F9"
            android:text="@string/creditCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/cash"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:background="#FCF9F9"
            android:text="@string/cash"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>































