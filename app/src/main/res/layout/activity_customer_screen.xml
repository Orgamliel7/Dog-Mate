<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bacground"
    android:layout_height="match_parent">


                <Button
                    android:id="@+id/myFavorites"
                    android:layout_width="395dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="372dp"
                    android:background="#F5F2F2"
                    android:onClick="moveToFavorites"
                    android:text="@string/favorites"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/myOrders"
                    android:layout_width="395dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="452dp"
                    android:background="#F5F2F2"
                    android:onClick="moveToCustomerOrders"
                    android:text="@string/myOrders"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/LogOutC"
                    android:layout_width="153dp"
                    android:layout_height="51dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginBottom="16dp"
                    android:background="#FCF8F8"
                    android:onClick="LogOutC"
                    android:text="@string/LogOutC"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/newOrder"
                    android:layout_width="395dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="528dp"
                    android:background="#F5F2F2"
                    android:onClick="moveToSearch"
                    android:text="@string/newOrder"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>



