<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacground"
    tools:context=".Navigation.Register">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/buildingNumber"
            android:layout_width="115dp"
            android:layout_height="33dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="164dp"
            android:text="@string/houseNumber"
            android:textColor="#0A0A0A"
            android:textSize="24sp"
            app:fontFamily="casual"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/appartmentNumber"
            android:layout_width="115dp"
            android:layout_height="33dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="90dp"
            android:text="@string/appartmentNumber"
            android:textColor="#0A0A0A"
            android:textSize="24sp"
            app:fontFamily="casual"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/floor"
            android:layout_width="115dp"
            android:layout_height="33dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="128dp"
            android:text="@string/floor"
            android:textColor="#0A0A0A"
            android:textSize="24sp"
            app:fontFamily="casual"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/streetName"
            android:layout_width="115dp"
            android:layout_height="33dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="200dp"
            android:text="@string/streetName"
            android:textColor="#0A0A0A"
            android:textSize="24sp"
            app:fontFamily="casual"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/cityName"
            android:layout_width="117dp"
            android:layout_height="33dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="236dp"
            android:text="@string/cityName"
            android:textColor="#0A0A0A"
            android:textSize="24sp"
            app:fontFamily="casual"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/appartmentNumberInput"
            android:layout_width="262dp"
            android:layout_height="35dp"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="90dp"
            android:autofillHints=""
            android:background="#FCF9F9"
            android:ems="10"
            android:inputType="number"
            android:textColor="#0C0C0C"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/floorNumberInput"
            android:layout_width="262dp"
            android:layout_height="35dp"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="128dp"
            android:autofillHints=""
            android:background="#FCF9F9"
            android:ems="10"
            android:inputType="number"
            android:textColor="#0C0C0C"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/buildingNumberInput"
            android:layout_width="262dp"
            android:layout_height="35dp"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="164dp"
            android:autofillHints=""
            android:background="#FCF9F9"
            android:ems="10"
            android:inputType="number"
            android:textColor="#0C0C0C"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/streetNameInput"
            android:layout_width="262dp"
            android:layout_height="35dp"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="200dp"
            android:autofillHints=""
            android:background="#FCF9F9"
            android:ems="10"
            android:inputType="text"
            android:textColor="#0C0C0C"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/cityNameInput"
            android:layout_width="262dp"
            android:layout_height="35dp"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="236dp"
            android:autofillHints=""
            android:background="#FCF9F9"
            android:ems="10"
            android:inputType="text"
            android:textColor="#0C0C0C"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="174dp"
            android:layout_height="80dp"
            android:layout_marginEnd="248dp"
            android:background="#FAF7F7"
            android:onClick="register"
            android:text="@string/Confirm"
            android:textColor="#0A0A0A"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/inputPhone"
            android:layout_width="262dp"
            android:layout_height="38dp"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="272dp"
            android:autofillHints=""
            android:background="#FCF9F9"
            android:ems="10"
            android:inputType="phone"
            android:textColor="#0C0C0C"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/Phone"
            android:layout_width="114dp"
            android:layout_height="33dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="272dp"
            android:text="@string/phoneNumber"
            android:textColor="#0A0A0A"
            android:textSize="24sp"
            app:fontFamily="casual"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/inputFullName"
            android:layout_width="262dp"
            android:layout_height="42dp"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="312dp"
            android:autofillHints=""
            android:background="#FCF9F9"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#0C0C0C"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/fullName"
            android:layout_width="126dp"
            android:layout_height="49dp"
            android:layout_marginBottom="304dp"
            android:text="@string/fullName"
            android:textColor="#0A0A0A"
            android:textSize="24sp"
            app:fontFamily="casual"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/PasswordInput"
            android:layout_width="262dp"
            android:layout_height="38dp"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="356dp"
            android:autofillHints=""
            android:background="#FCF9F9"
            android:ems="10"
            android:inputType="textWebPassword"
            android:textColor="#0C0C0C"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="LabelFor"
            tools:targetApi="o" />


        <TextView
            android:id="@+id/registerTextView"
            android:layout_width="160dp"
            android:layout_height="44dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="80dp"
            android:text="@string/Reg"
            android:textColor="#111111"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/EmailInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/EmailInput"
            android:layout_width="262dp"
            android:layout_height="35dp"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="396dp"
            android:autofillHints=""
            android:background="#FCF9F9"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="#0C0C0C"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="396dp"
            android:text="@string/Email"
            android:textColor="#0C0C0C"
            android:textSize="24sp"
            app:fontFamily="aclonica"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/Password"
            android:layout_width="98dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="356dp"
            android:text="@string/Password"
            android:textColor="#0A0A0A"
            android:textSize="24sp"
            app:fontFamily="casual"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <CheckBox
            android:id="@+id/ifadvertiser"
            android:layout_width="168dp"
            android:layout_height="42dp"
            android:layout_marginStart="188dp"
            android:buttonTint="#110000"
            android:text="@string/ifadvertiser"
            android:textColor="#0C0C0C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <CheckBox
            android:id="@+id/ifadopter"
            android:layout_width="173dp"
            android:layout_height="41dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="44dp"
            android:buttonTint="#0C0000"
            android:text="@string/ifadopter"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="180dp"
            android:layout_marginBottom="48dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>